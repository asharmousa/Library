@model IEnumerable<WebApplication1.Models.Book>

<form method="get" asp-action="Search">
    <input type="text" name="searchTerm" placeholder="Search by ID or Name" value="@ViewData["searchTerm"]" />
    <button type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.BookTitle</td>
                <td>@book.BookAuthor</td>
                <td>@book.BookStatus</td>
                <td>
                    @if (book.BookStatus == "Available")
                    {
                        <form method="post" asp-action="Borrow" asp-route-book_id="@book.BookId" asp-route-user_id="STUDENT123">
                            <button type="submit">Borrow</button>
                        </form>
                    }
                    else
                    {
                        <span>Already Borrowed</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>