@model WebApplication1.Models.Feedback

<style>
    .star-rating {
        direction: rtl; /* makes stars clickable from left to right */
        display: inline-flex;
    }

        .star-rating input {
            display: none; /* hide radio buttons */
        }

        .star-rating label {
            font-size: 2rem;
            color: #ddd;
            cursor: pointer;
            padding: 0 5px;
        }

        .star-rating input:checked ~ label {
            color: gold;
        }

        .star-rating label:hover,
        .star-rating label:hover ~ label {
            color: gold;
        }
</style>


<form asp-action="addFeedback" method="post">
    
