@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="AdminDashboard" asp-action="Index">Library Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="AdminDashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Book" asp-action="ShowBookForAdmin">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Room" asp-action="ShowRoomForAdmin">Rooms</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Feedbackt" asp-action="ReviewFeedback">Feedback</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Book" asp-action="UpdateBook">Update Book</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="User" asp-action="Blacklist">Blacklist</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @if (Context.Session.GetString("UserRole") == "Admin")
                        {
                            <li class="nav-item">
                                <span class="navbar-text text-light">
                                    Welcome, @Context.Session.GetString("FirstName") @Context.Session.GetString("LastName")
                                </span>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-light">
        <div class="container">
            &copy; 2026 - Library Management System (Admin)
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
